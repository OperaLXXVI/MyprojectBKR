@model IEnumerable<InterComCore.Entities.Contract>
@{
    ViewData["Title"] = "Усі контракти";
    Layout = "_Layout";  // якщо ви використовуєте окремий layout
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Усі контракти</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Шаблон</th>
                    <th>Користувач</th>
                    <th>Дата</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Template.Name</td>
                        <td>@c.UserId</td>
                        <td>@c.CreatedAt.ToString("g")</td>
                        <td>
                            <a class="btn btn-sm btn-outline-info me-1"
                               asp-area="Admin" asp-controller="Dashboard" asp-action="Details" asp-route-id="@c.Id">
                                Переглянути
                            </a>
                            <a class="btn btn-sm btn-outline-warning"
                               asp-area="Admin" asp-controller="Dashboard" asp-action="Edit" asp-route-id="@c.Id">
                                Редагувати
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
