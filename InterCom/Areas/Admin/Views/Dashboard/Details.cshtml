@model InterComCore.Entities.Contract
@{
    ViewData["Title"] = "Деталі договору";
    Layout = "_Layout";
}

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-info text-white">
        <h3 class="mb-0">@ViewData["Title"] — @Model.Template.Name</h3>
    </div>
    <div class="card-body">
        @* Вбудований перегляд згенерованого HTML *@
        <div class="mb-4">
            @Html.Raw(ViewBag.RenderedHtml as string)
        </div>

        <div class="d-flex">
            <a asp-area="Admin"
               asp-controller="Dashboard"
               asp-action="Index"
               class="btn btn-secondary me-2">
                ← Повернутися до списку
            </a>
            <a asp-area="User"
               asp-controller="Contracts"
               asp-action="Download"
               asp-route-id="@Model.Id"
               class="btn btn-primary">
                Завантажити PDF
            </a>
        </div>
    </div>
</div>
