@model IEnumerable<InterComCore.Entities.Placeholder>

@{
    ViewData["Title"] = "Плейсхолдери";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-success"
       asp-area="Admin"
       asp-controller="Placeholders"
       asp-action="Create">
        + Додати ключ
    </a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>Key</th>
            <th>Description</th>
            <th style="width:200px">Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Key</td>
                <td>@p.Description</td>
                <td>
                    @* Редагування через GET *@
                    <a class="btn btn-sm btn-primary me-1"
                       asp-area="Admin"
                       asp-controller="Placeholders"
                       asp-action="Edit"
                       asp-route-id="@p.Id">
                        Редагувати
                    </a>

                    @* Видалення через POST (безпечніше, з CSRF) *@
                    <form asp-area="Admin"
                          asp-controller="Placeholders"
                          asp-action="Delete"
                          asp-route-id="@p.Id"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-danger"
                                onclick="return confirm('Впевнені, що хочете видалити цей ключ?');">
                            Видалити
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
