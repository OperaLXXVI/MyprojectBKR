@model IEnumerable<InterCom.ViewModels.TemplateViewModel>

@{
    ViewData["Title"] = "Шаблони договорів";
    Layout = "_Layout";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row g-4">
    @foreach (var tpl in Model)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@tpl.Name</h5>

                    <ul class="list-unstyled text-muted small mb-3">
                        <li>
                            <strong>Створив:</strong>
                            @tpl.CreatedByUserName
                        </li>
                        <li>
                            <strong>Дата:</strong>
                            @tpl.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </li>
                    </ul>

                    <a asp-area="User"
                       asp-controller="Contracts"
                       asp-action="Create"
                       asp-route-templateId="@tpl.Id"
                       class="btn btn-primary mt-auto">
                        Заповнити договір
                    </a>
                </div>
            </div>
        </div>
    }
</div>
