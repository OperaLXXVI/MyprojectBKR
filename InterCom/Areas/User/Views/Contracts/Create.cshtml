@model InterComCore.Entities.Contract
@{
    ViewData["Title"] = "Створення договору";
    Layout = "_Layout";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-area="User"
      asp-controller="Contracts"
      asp-action="Create"
      method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="templateId" value="@ViewBag.TemplateId" />

    <div class="row">
        @foreach (var key in (IEnumerable<string>)ViewBag.PlaceholderKeys)
        {
            <div class="col-md-6 mb-3">
                <label for="@key" class="form-label">@key</label>
                <input id="@key" name="@key" class="form-control" required />
            </div>
        }
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Зберегти договір</button>
        <a asp-area="User"
           asp-controller="Dashboard"
           asp-action="Index"
           class="btn btn-secondary ms-2">
            Назад
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
